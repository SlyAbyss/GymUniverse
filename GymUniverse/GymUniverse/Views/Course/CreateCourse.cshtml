@model GymUniverse.ViewModels.CourseViewModels.CreateCourseViewModel
@Html.AntiForgeryToken()

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Course</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            background: url('/images/Galaxy-background.jpg') no-repeat center center fixed;
            background-size: cover;
            color: #fff;
            overflow-x: hidden;
        }

        .container {
            max-width: 1000px;
            margin: 50px auto;
            padding: 30px 50px;
            text-align: center;
            border-radius: 25px;
            background: rgba(25, 0, 150, 0.15);
            border: 1px solid rgba(255, 255, 255, 0.2);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.5);
            backdrop-filter: blur(3px);
        }

        h1 {
            font-size: 2.4em;
            margin-bottom: 20px;
            color: #e39ff6;
            text-shadow: 0 0 20px #ff6bff, 0 0 40px #d17cff;
        }

        .form-group {
            margin-bottom: 20px;
            text-align: left;
        }

        label {
            font-size: 1.2em;
            color: #e39ff6;
            text-shadow: 0 0 10px #ff6bff, 0 0 20px #d17cff;
            display: block;
        }

        input, textarea {
            width: 100%;
            padding: 10px;
            margin-top: 5px;
            border-radius: 10px;
            border: 1px solid rgba(255, 255, 255, 0.3);
            background-color: rgba(255, 255, 255, 0.1);
            color: #fff;
        }

            input::placeholder, textarea::placeholder {
                color: rgba(255, 255, 255, 0.6);
            }

        .btn-submit {
            background-color: #d17cff;
            color: #fff !important;
            border: none;
            width: 30%;
            padding: 10px 20px;
            font-size: 1em;
            cursor: pointer;
            border-radius: 10px;
            margin-top: 20px;
        }

            .btn-submit:hover {
                background-color: #85309c;
                color: #fff !important;
            }

        footer .container {
            padding: 0px;
        }

        footer {
            position: relative !important;
        }
    </style>
</head>
<body>
    <h1>Create a New Course</h1>
    <form asp-action="CreateCourse" method="post">
        <input type="hidden" asp-for="TrainerId" />

        <div class="form-group">
            <label asp-for="Name">Course Name</label>
            <input asp-for="Name" class="form-control" placeholder="Enter the course name" autocomplete="off" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Price">Price</label>
            <input asp-for="Price" class="form-control" type="number" placeholder="Enter the price" autocomplete="off" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Schedule">Schedule</label>
            <input asp-for="Schedule" class="form-control" type="datetime-local" value="@Model.Schedule.ToString("yyyy-MM-ddTHH:mm")" />
            <span asp-validation-for="Schedule" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description">Description</label>
            <textarea asp-for="Description" class="form-control" rows="5" placeholder="Provide a brief description of the course"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-submit">Save Course</button>
    </form>
</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}