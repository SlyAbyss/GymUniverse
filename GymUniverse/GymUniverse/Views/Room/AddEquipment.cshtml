@model GymUniverse.ViewModels.EquipmentViewModels.EquipmentRoomViewModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add/Remove Equipment to @Model.RoomName</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            background: url('/images/Galaxy-background.jpg') no-repeat center center fixed;
            background-size: cover;
            color: #fff;
            overflow-x: hidden;
            position: relative;
        }

        .container {
            max-width: 1200px;
            margin: 50px auto;
            padding: 30px 100px;
            text-align: center;
            border-radius: 25px;
            background: rgba(25, 0, 150, 0.15);
            border: 1px solid rgba(255, 255, 255, 0.2);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.5);
            backdrop-filter: blur(3px);
        }

        h1 {
            font-size: 2.8em;
            margin-bottom: 40px;
            color: #e39ff6;
            text-shadow: 0 0 20px #ff6bff, 0 0 40px #d17cff;
        }

        .equipment-list {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: center;
        }

        .equipment-item {
            width: calc(33% - 20px);
            background: rgba(255, 255, 255, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 15px;
            padding: 15px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.5);
            text-align: center;
            position: relative;
        }

        .equipment-image {
            width: 100%;
            height: 200px;
            border-radius: 15px;
            overflow: hidden;
            position: relative;
        }

            .equipment-image img {
                width: 100%;
                height: 100%;
                object-fit: cover;
                border-radius: 15px;
            }

        .equipment-name {
            font-size: 1.2em;
            font-weight: bold;
            color: #e39ff6;
            text-shadow: 0 0 10px #ff6bff;
            margin-top: 10px;
        }


        .this {
            background-color: #d17cff !important;
            color: #fff !important;
            border: none !important;
            width: 30%;
        }

            .this:hover {
                background-color: #85309c !important;
                color: #fff !important;
            }

        .this-add {
            background-color: #009925 !important;
            color: #fff !important;
            border: none !important;
            width: 30%;
        }

            .this-add:hover {
                background-color: #015415 !important;
                color: #fff !important;
            }

        .this-remove {
            background-color: #e53935 !important;
            color: #fff !important;
            border: none !important;
            width: 40%;
        }

            .this-remove:hover {
                background-color: #ad0006 !important;
                color: #fff !important;
            }

        .button-group {
            display: flex;
            justify-content: center;
            gap: 20px;
            margin-top: 30px;
        }

        footer .container {
            padding: 0px;
        }

        .footer {
            position: relative !important;
        }
    </style>
</head>
<body>
    <h1>Edit Equipment in @Model.RoomName</h1>
    <div class="equipment-list">
        @foreach (var equipment in Model.Equipment)
        {
            <div class="equipment-item">
                <div class="equipment-image">
                    @if (!string.IsNullOrEmpty(@equipment.ImageUrl))
                    {
                        <img src="@equipment.ImageUrl" alt="@equipment.Name" />
                    }
                    else
                    {
                        <img src="~/images/EquipmentPH.png" alt="@equipment.Name" />
                    }
                </div>
                <div class="equipment-name">@equipment.Name</div>

                @if (Model.SelectedEquipment.Contains(equipment.Id))
                {
                    <form asp-action="RemoveEquipment" method="post">
                        <input type="hidden" name="RoomId" value="@Model.RoomId" />
                        <input type="hidden" name="EquipmentId" value="@equipment.Id" />
                        <button type="submit" class="btn this-remove">Remove</button>
                    </form>
                }
                else
                {
                    <form asp-action="AddEquipment" method="post">
                        <input type="hidden" name="RoomId" value="@Model.RoomId" />
                        <input type="hidden" name="EquipmentId" value="@equipment.Id" />
                        <button type="submit" class="this-add btn">Add</button>
                    </form>
                }
            </div>
        }
    </div>
    <div class="button-group">
        <a asp-controller="Equipment" asp-action="CreateEquipment" asp-route-roomId="@Model.RoomId" class="btn this">Create Equipment</a>
        <a asp-controller="Room" asp-action="RoomDetails" asp-route-id="@Model.RoomId" class="btn this">Back to Room</a>
    </div>

</body>
</html>
