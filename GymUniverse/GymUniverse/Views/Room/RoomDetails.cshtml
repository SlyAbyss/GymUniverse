@model GymUniverse.Models.Room

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.Name - Room Details</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin-bottom: 150px;
            padding: 0;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            background: url('/images/Galaxy-background.jpg') no-repeat center center fixed;
            background-size: cover;
            color: #fff;
            overflow-x: hidden;
        }

        .container {
            max-width: 1200px;
            margin: 50px auto;
            padding: 30px 50px;
            text-align: center;
            border-radius: 25px;
            background: rgba(25, 0, 150, 0.15);
            border: 1px solid rgba(255, 255, 255, 0.2);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.5);
            backdrop-filter: blur(3px);
        }

        h1 {
            font-size: 2.8em;
            margin-bottom: 40px;
            color: #e39ff6;
            text-shadow: 0 0 20px #ff6bff, 0 0 40px #d17cff;
        }

        .room-image img {
            max-width: 70%;
            height: auto;
            border-radius: 15px;
            margin-bottom: 20px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.7);
        }

        .description {
            font-size: 1.2em;
            line-height: 1.8;
            color: #dcdcdc;
            margin: 25px 0px;
        }

        .equipment-list {
            margin-top: 30px;
        }

        .equipment-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 20px;
        }

        .equipment-item {
            text-align: center;
            background: rgba(255, 255, 255, 0.1);
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
        }

            .equipment-item img {
                max-width: 100%;
                height: auto;
                border-radius: 10px;
                margin-bottom: 10px;
                box-shadow: 0 2px 5px rgba(0, 0, 0, 0.3);
            }

        .equipment-name {
            font-size: 1.2em;
            color: #e39ff6;
            margin: 10px 0;
            text-shadow: 0 0 10px #ff6bff;
        }

        .equipment-description {
            font-size: 0.9em;
            color: #dcdcdc;
        }

        .btn-warning {
            width:20%;
            margin-top: 25px;
            background-color: #d17cff !important;
            color: #fff !important;
            border: none !important;
            padding: 10px 20px;
            border-radius: 5px;
        }

            .btn-warning:hover {
                background-color: #85309c !important;
            }

        hr {
            box-shadow: 0 0 20px #ff6bff, 0 0 40px #d17cff;
            border-top: 3px solid #ff6bff;
        }

        footer .container {
            padding: 0px;
        }
    </style>
</head>
<body>
    <div class="room-image">
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Model.ImageUrl" alt="@Model.Name" />
        }
        else
        {
            <img src="~/images/RoomPH.png" alt="@Model.Name" />
        }
    </div>

    <h1>@Model.Name</h1>
    <div class="description">
        <p><strong>Description:</strong> @Model.Description</p>
    </div>

    <div class="equipment-list">
        <h2>Equipment</h2>
        <hr />
        @if (Model.RoomsEquipments != null && Model.RoomsEquipments.Any())
        {
            <div class="equipment-grid">
                @foreach (var roomEquipment in Model.RoomsEquipments)
                {
                    <div class="equipment-item">
                        @if (!string.IsNullOrEmpty(roomEquipment.Equipment.ImageUrl))
                        {
                            <img src="@roomEquipment.Equipment.ImageUrl" alt="@roomEquipment.Equipment.Name" />
                        }
                        else
                        {
                            <img src="~/images/EquipmentPH.png" alt="@roomEquipment.Equipment.Name" />
                        }
                        
                        <div class="equipment-name">@roomEquipment.Equipment.Name</div>
                        <div class="equipment-description">@roomEquipment.Equipment.Description</div>
                    </div>
                }
            </div>
        }
        else
        {
            <p>No equipment available for this room.</p>
        }
    </div>

    <div>
        @if (User.IsInRole("Administrator"))
        {
            <a asp-controller="Room" asp-action="AddEquipment" asp-route-roomId="@Model.Id" class="btn btn-warning">Eddit Equipment</a>
        }
    </div>
</body>
</html>
