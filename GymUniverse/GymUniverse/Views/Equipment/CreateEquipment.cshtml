@model GymUniverse.Models.Equipment

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Equipment</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            background: url('/images/Galaxy-background.jpg') no-repeat center center fixed;
            background-size: cover;
            color: #fff;
            overflow-x: hidden;
            position: relative;
        }

        .container {
            max-width: 800px;
            margin: 50px auto;
            padding: 30px 50px;
            text-align: center;
            border-radius: 25px;
            background: rgba(25, 0, 150, 0.15);
            border: 1px solid rgba(255, 255, 255, 0.2);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.5);
            backdrop-filter: blur(3px);
        }

        h1 {
            font-size: 2.8em;
            margin-bottom: 30px;
            color: #e39ff6;
            text-shadow: 0 0 20px #ff6bff, 0 0 40px #d17cff;
        }

        .form-group {
            margin-bottom: 20px;
            text-align: left;
        }

        label {
            font-size: 1.2em;
            color: #fff;
            margin-bottom: 10px;
            display: block;
        }

        textarea {
            resize: vertical;
            min-height: 150px;
        }

        .this {
            background-color: #d17cff !important;
            color: #fff !important;
            border: none !important;
            padding: 5px 10px;
            border-radius: 5px;
            width: 30%;
        }

            .this:hover {
                background-color: #85309c !important;
                color: #fff !important;
            }

        footer .container {
            padding: 0px;
        }
    </style>
</head>
<body>
    <h1>Create New Equipment</h1>

    <form asp-action="CreateEquipment" method="post">
        <div class="form-group">
            <label for="Name">Equipment Name</label>
            <input type="text" class="form-control" id="Name" name="Name" placeholder="The name of the equipment." autocomplete="off" required />
        </div>

        <div class="form-group">
            <label for="ImageUrl">Image URL</label>
            <input type="text" class="form-control" id="ImageUrl" name="ImageUrl" placeholder="Paste the image URL here (optional)" autocomplete="off" />
        </div>

        <div class="form-group">
            <label for="Description">Description</label>
            <textarea class="form-control" id="Description" rows="5" name="Description" placeholder="A short description of the equipment." required></textarea>
        </div>

        <button type="submit" class="this">Create Equipment</button>
    </form>
</body>
</html>
