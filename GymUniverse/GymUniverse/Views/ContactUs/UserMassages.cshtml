@model List<GymUniverse.Models.ContactMessage>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Messages</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            min-height: 100vh;
            background: url('/images/Galaxy-background.jpg') no-repeat center center fixed;
            background-size: cover;
            color: #fff;
            overflow-x: hidden;
        }

        .container {
            max-width: 1200px;
            margin: 50px auto;
            padding: 30px;
            text-align: center;
            border-radius: 25px;
            background: rgba(25, 0, 150, 0.15);
            border: 1px solid rgba(255, 255, 255, 0.2);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.5);
            backdrop-filter: blur(3px);
        }

        h1 {
            margin-bottom: 20px;
            color: #e39ff6;
            text-shadow: 0 0 20px #ff6bff, 0 0 40px #d17cff;
        }

        h5 {
            margin-top: 20px;
            color: #e39ff6;
            text-shadow: 0 0 20px #ff6bff, 0 0 40px #d17cff;
        }

        .card {
            width: 90%;
            max-width: 800px;
            margin: 20px auto;
            background: rgba(25, 0, 50, 0.5);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.5);
            color: #fff;
            padding: 15px;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .card:hover {
                transform: scale(1.05);
                box-shadow: 0 10px 20px rgba(0, 0, 0, 0.7);
                box-shadow: 0 0 20px rgba(255, 107, 255, 0.7);
            }

        .card-title {
            color: #e39ff6;
            text-shadow: 0 0 10px #ff6bff;
            margin-bottom: 10px;
        }

        .card p {
            margin: 5px 0;
        }

        .btn-danger {
            margin-top: 20px;
            background-color: #ff4c4c !important;
            color: #fff !important;
            border: none !important;
            padding: 10px 15px;
            border-radius: 5px;
            cursor: pointer;
        }

            .btn-danger:hover {
                background-color: #d00000 !important;
                color: #fff !important;
            }

        .no-messages {
            text-align: center;
            color: #ddd;
            margin: 50px 0;
        }

        hr {
            box-shadow: 0 0 20px #ff6bff, 0 0 40px #d17cff;
            border-top: 3px solid #ff6bff;
        }

        footer .container {
            padding: 0px;
        }

        .footer {
            position: relative !important;
        }

    </style>
</head>
<body>
    <h1>Contact Messages</h1>
    <hr />
    @if (Model == null || !Model.Any())
    {
        <div class="no-messages">
            <h4>No messages have been received yet.</h4>
        </div>
    }
    else
    {
        <div>
            @foreach (var message in Model)
            {
                <div class="card">
                    <h2 class="card-title">Message from - @message.Name</h2>
                    <p><small><em>Submitted at: @message.SubmittedAt.ToString("f")</em></small></p>
                    <hr />
                    <p><strong>Email:</strong> @message.Email</p>
                    <h5><strong>Message:</strong></h5>
                    <p>@message.Message</p>
                    <form method="post" asp-controller="ContactUs" asp-action="DeleteMessage">
                        <input type="hidden" name="messageId" value="@message.Id" />
                        <button type="submit" class="btn-danger" onclick="return confirm('Are you sure you want to delete the message from @message.Name')">Delete</button>
                    </form>
                </div>
            }
        </div>
    }
</body>
</html>
