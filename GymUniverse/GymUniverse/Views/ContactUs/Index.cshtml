@{
    ViewData["Title"] = "Contact Us";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Us</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background: url('/images/Galaxy-background.jpg') no-repeat center center fixed;
            background-size: cover;
            color: #fff;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 800px;
            margin: 50px auto;
            padding: 20px;
            background: rgba(25, 0, 150, 0.2);
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.5);
        }

        h1 {
            color: #e39ff6;
            text-shadow: 0 0 10px #ff6bff, 0 0 30px #d17cff;
            text-align: center;
        }

        form {
            display: flex;
            flex-direction: column;
        }

        label {
            font-size: 1.2em;
            margin: 10px 0 5px;
        }

        input, textarea, button {
            font-size: 1em;
            padding: 10px;
            margin-bottom: 15px;
            border-radius: 5px;
            border: none;
        }

        input, textarea {
            width: 100%;
            box-sizing: border-box;
        }

        textarea {
            height: 150px;
        }

        button {
            background-color: #e39ff6;
            color: #fff;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            button:hover {
                background-color: #85309c;
            }

        .error {
            color: #e53935;
            font-weight: bold;
            text-align: center;
        }

        .success {
            color: #4CAF50;
            font-weight: bold;
            text-align: center;
        }
    </style>
</head>
<body>
        <h1>Contact Us</h1>

        @if (ViewBag.Error != null)
        {
            <p class="error">@ViewBag.Error</p>
        }
        else if (ViewBag.Success != null)
        {
            <p class="success">@ViewBag.Success</p>
        }

    <form method="post" asp-action="Submit">
        <label for="name">Name:</label>
        <input type="text" id="name" name="Name" placeholder="Your Name" required />

        <label for="email">Email:</label>
        <input type="email" id="email" name="Email" value="@ViewBag.UserEmail" placeholder="Your Email" required />

        <label for="message">Message:</label>
        <textarea id="message" name="Message" placeholder="Your Message" required></textarea>

        <button type="submit">Send Message</button>
    </form>
</body>
</html>
