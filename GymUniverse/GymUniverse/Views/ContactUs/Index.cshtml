@using Microsoft.AspNetCore.Identity
    @model GymUniverse.ViewModels.ContactUsViewModels.ContactMessageViewModel
    @inject UserManager<ApplicationUser> UserManager

@Html.AntiForgeryToken()

@{
    ViewData["Title"] = "Contact Us";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contact Us</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            padding: 0;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            background: url('/images/Galaxy-background.jpg') no-repeat center center fixed;
            background-size: cover;
            color: #fff;
            overflow-x: hidden;
            position: relative;
        }

        .container {
            max-width: 800px;
            margin: 50px auto;
            padding: 30px 100px;
            text-align: center;
            border-radius: 25px;
            background: rgba(25, 0, 150, 0.15);
            border: 1px solid rgba(255, 255, 255, 0.2);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.5);
            backdrop-filter: blur(3px);
        }

        h1 {
            color: #e39ff6;
            text-shadow: 0 0 10px #ff6bff, 0 0 30px #d17cff;
            text-align: center;
        }

        form {
            display: flex;
            flex-direction: column;
        }

        label {
            font-size: 1.2em;
            margin: 10px 0 5px;
        }

        .info-section {
            margin-bottom: 30px;
        }

            .info-section p {
                font-size: 1.2em;
                line-height: 1.5;
                color: #dcdcdc;
            }

        input, textarea {
            font-size: 1em;
            padding: 10px;
            margin-bottom: 15px;
            border-radius: 5px;
            border: none;
        }

        input, textarea {
            width: 100%;
            box-sizing: border-box;
        }

        .error {
            color: #e53935;
            font-weight: bold;
            text-align: center;
        }

        .success {
            color: #4CAF50;
            font-weight: bold;
            text-align: center;
        }

        .this {
            background-color: #d17cff !important;
            color: #fff !important;
            border: none !important;
        }

            .this:hover {
                background-color: #85309c !important;
                color: #fff !important;
            }

        hr {
            box-shadow: 0 0 20px #ff6bff, 0 0 40px #d17cff;
            border-top: 3px solid #ff6bff;
        }

        footer .container {
            padding: 0px;
        }

        .footer {
            position: relative !important;
        }
    </style>
</head>
<body>
    <h1>Contact Us</h1>
    <hr />
    <div class="info-section">
        <h2>Our Details</h2>
        <p><strong>Phone:</strong> +1-800-555-1234</p>
        <p><strong>Email:</strong> support@gymuniverse.com</p>
        <p><strong>Address:</strong> 493 Fitness Avenue, Workout City, Fitland</p>
    </div>
    <hr />
    <h1>Send Us a Message</h1>
    <form method="post" asp-action="Submit">
        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" class="form-control" autocomplete="off"
                   value="@Model.LoggedInUsername" placeholder="Your Name" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" class="form-control" autocomplete="off"
                   value="@Model.LoggedInEmail" placeholder="Your Email" required />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Message">Your Message</label>
            <textarea asp-for="Message" class="form-control" rows="5" placeholder="Your Message" required></textarea>
            <span asp-validation-for="Message" class="text-danger"></span>
        </div>

        <button type="submit" class="this btn">Send Message</button>
    </form>
</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}